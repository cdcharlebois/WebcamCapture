<?xml version="1.0" encoding="utf-8" ?>
<widget id="WebcamCapture.widget.WebcamCapture" needsEntityContext="true" 
    xmlns="http://www.mendix.com/widget/1.0/">
    <name>WebcamCapture</name>
    <description>The description of this widget.</description>
    <icon />
    <properties>
        <property key="onUploaded" type="microflow" required="false">
            <caption>Callback</caption>
            <category>General</category>
            <description>Microflow to call with the newly uploaded image as a parameter.</description>
            <returnType type="Void"></returnType>
        </property>
        <property key="buttonText" type="string" required="false" defaultValue="">
            <caption>Text</caption>
            <category>General</category>
            <description></description>
        </property>
        <property key="buttonClass" type="string" required="false" defaultValue="">
            <caption>Button Class</caption>
            <category>General</category>
            <description></description>
        </property>
        <property key="width" type="integer" required="true" defaultValue="100">
            <caption>Live Preview Width</caption>
            <category>General</category>
            <description></description>
        </property>
        <property key="wunit" type="enumeration" defaultValue="percent">
            <caption>Width Unit</caption>
            <category>General</category>
            <description></description>
            <enumerationValues>
                <enumerationValue key="percent">Percent</enumerationValue>
                <enumerationValue key="pixels">Pixels</enumerationValue>
            </enumerationValues>
        </property>
    </properties>
</widget>